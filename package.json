{
  "name": "skynet-memory-mcp",
  "version": "1.0.0",
  "description": "Standalone MCP server for Skynet's production-grade memory system with hybrid search, ChromaDB, and Neo4j knowledge graph",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skynet-memory-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "sync": "tsx src/sync.ts",
    "sync:watch": "tsx src/sync.ts --watch",
    "sync:full": "tsx src/sync.ts --full-resync",
    "type-check": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [
    "mcp",
    "memory",
    "chromadb",
    "neo4j",
    "knowledge-graph",
    "semantic-search",
    "ai",
    "llm"
  ],
  "author": "Eren Can Sinecan",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/deepseek": "^0.2.16",
    "@ai-sdk/google": "^2.0.17",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "ai": "^5.0.59",
    "better-sqlite3": "^11.10.0",
    "chromadb": "^2.4.6",
    "dotenv": "^16.6.1",
    "neo4j-driver": "^5.28.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
